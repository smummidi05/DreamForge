
import { useState, useEffect, useRef } from 'react';
import { useNavigate } from 'react-router-dom';
import { Send, Mic, MicOff, Sparkles, ArrowLeft } from 'lucide-react';

function ProjectBuilder() {
  const navigate = useNavigate();
  const [preferences, setPreferences] = useState(null);
  const [messages, setMessages] = useState([]);
  const [inputText, setInputText] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [isListening, setIsListening] = useState(false);
  const messagesEndRef = useRef(null);

  // Load user preferences
  useEffect(() => {
    const saved = localStorage.getItem('dreamforge_preferences');
    if (saved) {
      const prefs = JSON.parse(saved);
      setPreferences(prefs);
      
      // Add welcome message based on project type
      const welcomeMessages = {
        recipe: "Hello! I'm so excited to help you preserve your recipe. Let's start with the name - what's this special dish called?",
        album: "Hi there! I'd love to help you create a memory album. Let's begin - what's the first photo or memory you'd like to share?",
        blog: "Welcome! I'm here to help you share your hobby with the world. What would you like to write about today?"
      };
      
      setMessages([
        {
          role: 'assistant',
          content: welcomeMessages[prefs.projectType] || "Hi! Let's create something wonderful together. What would you like to start with?"
        }
      ]);
    } else {
      // No preferences found, redirect to onboarding
      navigate('/onboarding');
    }
  }, [navigate]);

  // Auto-scroll to bottom when new messages arrive
  useEffect(() => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  }, [messages]);

  // Handle sending messages
  const handleSend = async () => {
    if (!inputText.trim()) return;

    const userMessage = inputText.trim();
    setInputText('');
    
    // Add user message to chat
    setMessages(prev => [...prev, { role: 'user', content: userMessage }]);
    setIsLoading(true);

    try {
      // Call your backend API
      const response = await fetch('http://localhost:3001/api/ai/chat', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          message: userMessage,
          projectType: preferences.projectType,
          conversationHistory: messages
        })
      });

      const data = await response.json();
      
      // Add AI response to chat
      setMessages(prev => [...prev, { 
        role: 'assistant', 
        content: data.response || "I'm here to help! Could you tell me more about that?"
      }]);
    } catch (error) {
      console.error('Error calling AI:', error);
      // Fallback response
      setMessages(prev => [...prev, { 
        role: 'assistant', 
        content: "I'm having trouble connecting right now. But I'm still here! Could you share more details about your project?"
      }]);
    } finally {
      setIsLoading(false);
    }
  };

  // Handle voice input
  const toggleVoiceInput = () => {
    if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
      alert('Voice input is not supported in your browser. Please try typing instead!');
      return;
    }

    if (isListening) {
      setIsListening(false);
      // Stop recognition
    } else {
      setIsListening(true);
      // Start recognition
      const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
      const recognition = new SpeechRecognition();
      
      recognition.onresult = (event) => {
        const transcript = event.results[0][0].transcript;
        setInputText(transcript);
        setIsListening(false);
      };

      recognition.onerror = () => {
        setIsListening(false);
        alert('Could not understand audio. Please try again!');
      };

      recognition.start();
    }
  };

  const handleKeyPress = (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      handleSend();
    }
  };

  if (!preferences) {
    return <div className="min-h-screen bg-cream flex items-center justify-center">
      <p className="text-xl text-navy">Loading...</p>
    </div>;
  }

  const projectTitles = {
    recipe: 'Family Recipe Book',
    album: 'Memory Photo Album',
    blog: 'Hobby Blog'
  };

  return (
    <div className="min-h-screen bg-cream flex flex-col">
      {/* Header */}
      <header className="bg-white shadow-soft py-4 px-6">
        <div className="container mx-auto flex items-center justify-between">
          <button
            onClick={() => navigate('/')}
            className="flex items-center gap-2 text-navy hover:text-lavender-500 transition-colors"
          >
            <ArrowLeft size={24} />
            <span className="text-lg font-medium">Back to Home</span>
          </button>
          <div className="text-center">
            <h1 className="text-2xl font-heading font-bold text-lavender-500">
              {projectTitles[preferences.projectType]}
            </h1>
          </div>
          <div className="w-32"></div> {/* Spacer for centering */}
        </div>
      </header>

      {/* Chat Messages */}
      <div className="flex-1 overflow-y-auto py-8 px-6">
        <div className="container mx-auto max-w-3xl space-y-6">
          {messages.map((message, index) => (
            <Message key={index} message={message} />
          ))}
          {isLoading && (
            <div className="flex justify-start">
              <div className="bg-white rounded-2xl p-4 shadow-soft">
                <div className="flex gap-2">
                  <div className="w-3 h-3 bg-lavender-500 rounded-full animate-bounce"></div>
                  <div className="w-3 h-3 bg-lavender-500 rounded-full animate-bounce" style={{ animationDelay: '0.1s' }}></div>
                  <div className="w-3 h-3 bg-lavender-500 rounded-full animate-bounce" style={{ animationDelay: '0.2s' }}></div>
                </div>
              </div>
            </div>
          )}
          <div ref={messagesEndRef} />
        </div>
      </div>

      {/* Input Area */}
      <div className="bg-white border-t-2 border-warmGray py-6 px-6">
        <div className="container mx-auto max-w-3xl">
          <div className="flex gap-3 items-end">
            {/* Voice Button (if user selected voice input) */}
            {preferences.inputMethod === 'voice' && (
              <button
                onClick={toggleVoiceInput}
                className={`flex-shrink-0 p-4 rounded-2xl transition-all shadow-soft
                  ${isListening 
                    ? 'bg-coral-400 text-white animate-pulse' 
                    : 'bg-lavender-500 hover:bg-lavender-600 text-white'
                  }`}
              >
                {isListening ? <MicOff size={28} /> : <Mic size={28} />}
              </button>
            )}

            {/* Text Input */}
            <textarea
              value={inputText}
              onChange={(e) => setInputText(e.target.value)}
              onKeyPress={handleKeyPress}
              placeholder={preferences.inputMethod === 'voice' 
                ? "Click the microphone to speak, or type here..." 
                : "Type your message here..."}
              rows={3}
              className="flex-1 px-6 py-4 text-lg rounded-2xl border-2 border-warmGray focus:border-lavender-500 focus:outline-none resize-none"
            />

            {/* Send Button */}
            <button
              onClick={handleSend}
              disabled={!inputText.trim() || isLoading}
              className={`flex-shrink-0 p-4 rounded-2xl transition-all shadow-soft
                ${inputText.trim() && !isLoading
                  ? 'bg-lavender-500 hover:bg-lavender-600 text-white cursor-pointer'
                  : 'bg-warmGray text-navy/40 cursor-not-allowed'
                }`}
            >
              <Send size={28} />
            </button>
          </div>
          
          <p className="text-center text-sm text-navy/60 mt-4">
            Press Enter to send, or Shift+Enter for a new line
          </p>
        </div>
      </div>
    </div>
  );
}

// Message Component
function Message({ message }) {
  const isUser = message.role === 'user';
  
  return (
    <div className={`flex ${isUser ? 'justify-end' : 'justify-start'}`}>
      <div className={`max-w-2xl rounded-2xl p-6 shadow-soft
        ${isUser 
          ? 'bg-lavender-500 text-white' 
          : 'bg-white text-navy'
        }`}
      >
        {!isUser && (
          <div className="flex items-center gap-2 mb-2 text-lavender-500">
            <Sparkles size={20} />
            <span className="font-semibold">Your AI Guide</span>
          </div>
        )}
        <p className="text-lg leading-relaxed whitespace-pre-wrap">
          {message.content}
        </p>
      </div>
    </div>
  );
}

export default ProjectBuilder;
